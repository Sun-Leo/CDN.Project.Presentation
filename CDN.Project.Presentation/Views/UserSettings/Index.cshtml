@model UserEditModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<div>
    <form method="post">
        <label>Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Soyadı</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br />
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" asp-for="Username" readonly />
        <br />
        <label>Mail Adresi</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>Şifreniz</label>
        <input type="password" class="form-control" asp-for="Password" />
        <br />
        <label>Şifre Tekrarı</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
    </form>
</div>

