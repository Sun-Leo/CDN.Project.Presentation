@model List<RoleAssignModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h3>Role Atama Sayfası</h3>
<br />
<div class="col-lg-12">
    <div class="card">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {

                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleID" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                </div>

            }
            <br />
            <button class="btn mb-1 btn-rounded btn-outline-dark">Güncelle</button>
        </form>
    </div>
</div>
