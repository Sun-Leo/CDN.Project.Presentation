@using EntityLayer.Concrate
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<br />
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Role Tablosu</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <th>
                                    <span class="badge badge-primary px-2">@item.Id</span>
                                </th>
                                <th>
                                    <span class="badge badge-primary px-2">@item.Name</span>
                                </th>
                                <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a> </td>
                            </tr>

                        }
                      
                      
                    </tbody>
                </table>
                <a href="/Role/AddRole" class="btn btn-outline-primary">Rol Ekle</a>
            </div>
        </div>
    </div>
    <!-- /# card -->
</div>


